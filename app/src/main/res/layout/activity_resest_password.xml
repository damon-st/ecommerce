<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResestPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:id="@+id/r6"
        >

        <TextView
            android:id="@+id/page_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar ContraseÃ±a"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porfavor escribe tu numero de telefono"
        android:background="@drawable/input_desing"
        android:padding="14dp"
        android:inputType="textEmailAddress"
        android:layout_margin="15dp"
        android:layout_below="@+id/r6"
        android:id="@+id/find_phone_number"/>




    <TextView
        android:id="@+id/title_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responder las siguientes Pregustas de Seguridad?"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_below="@+id/find_phone_number"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Donde se conocieron tus padres ?"
        android:background="@drawable/input_desing"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/title_question"
        android:id="@+id/question_1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cual es tu personaje favorito?"
        android:background="@drawable/input_desing"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/question_1"
        android:id="@+id/question_2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificar"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/question_2"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/verify_btn"/>




</RelativeLayout>