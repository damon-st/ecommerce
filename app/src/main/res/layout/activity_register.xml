<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222431"
    tools:context=".Buyers.RegisterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <ImageView
        android:id="@+id/register_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/iconotienda" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_applogo"
        android:id="@+id/register_user_name_input"
        android:background="@drawable/input_desing"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Nombre Usuario"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_user_name_input"
        android:id="@+id/register_phone_number_input"
        android:background="@drawable/input_desing"
        android:padding="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Numero Celular"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone_number_input"
        android:id="@+id/register_phone_password_input"
        android:background="@drawable/input_desing"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone_password_input"
        android:id="@+id/register_email_input"
        android:background="@drawable/input_desing"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_email_input"
        android:id="@+id/register_address_input"
        android:background="@drawable/input_desing"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Direccion"
        android:inputType="text"
        android:layout_marginTop="7dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorAccent"
        android:textSize="17sp"
        android:textStyle="bold"/>



    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_address_input"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Crear Cuenta"
        android:textColor="@color/colorAccent"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>