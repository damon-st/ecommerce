<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Chat.ImageViewerActivity">

    <ImageView
        android:id="@+id/btn_dowload"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_dowload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <ImageView
        android:layout_below="@+id/btn_dowload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/crop_image_menu_flip"
    android:id="@+id/image_viewer"/>

    <ProgressBar
        android:id="@+id/progesImageViewer"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminateDrawable="@drawable/progress_bar"
        android:indeterminateDuration="@android:integer/config_longAnimTime"
        android:layout_centerInParent="true"
        />

</RelativeLayout>